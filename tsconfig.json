{
  "compilerOptions": {
    "sourceRoot": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": ["node", "jest-environment-puppeteer"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeRoots": [
    "./src/types/"
  ]
}
